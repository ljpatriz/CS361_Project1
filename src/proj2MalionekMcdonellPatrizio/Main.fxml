<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.Scene?>


<!--
 * Outlines the main application scene containing two buttons and a fileMenu containing
 * an exit entry.  The Main.java file is set as the controller for this scene
-->
<Scene fx:controller="proj2MalionekMcdonellPatrizio.Main"
       xmlns="http://javafx.com/javafx/8.0.102-ea" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Borderpane containing the fileMenu and button box.
    The prefHeight and prefWidth is the starting size -->
    <BorderPane prefHeight="250.0" prefWidth="300.0" >

        <!-- The menu bar declaration -->
        <top>
            <MenuBar>
                <Menu text="File">
                    <MenuItem fx:id="exitButton" text="Exit"/>
                </Menu>
            </MenuBar>
       </top>

        <!-- The button bar declaration which aligns children horizontally -->
       <center>
           <HBox alignment="CENTER" spacing="8.0">
               <Button fx:id="playButton" text="Play scale"/>
               <Button fx:id="stopButton" text="Stop playing"/>
           </HBox>
       </center>

    </BorderPane>

</Scene>
